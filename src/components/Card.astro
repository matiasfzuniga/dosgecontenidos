---
const { href, alt, width, height } = Astro.props;
import { Image } from "astro:assets";
---

<div class="image-container" oncontextmenu="return false;">
    <div class="overlay">
  <Image src={href} alt={alt} width={width} height={height} class="image"/>
    </div>
</div>
<style>
  .image-container {
    width: 30%;
    padding: 12px 15px;
    overflow: hidden;
    position: relative;
   
  }
  .overlay {
    width: 100%;
    height: 100%;
    overflow: hidden;
    user-select: none;
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1); 
  }

  .image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.8s ease-out;
  }
  .image:hover {
    transform: scale(1.1);
  }
  @media screen and (max-width: 768px) {
    .image-container {
      width: 100%;
      padding: 0px 0px 20px;
    }
  }
</style>
